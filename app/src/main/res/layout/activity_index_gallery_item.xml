<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <RelativeLayout
        android:id="@+id/rl_pic"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/id_index_gallery_item_image"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/meinv1"
       />

    <TextView
        android:id="@+id/id_index_gallery_item_text"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/id_index_gallery_item_image"
        android:textSize="18sp"
        android:text="美女图片"
        android:background="#00ff00"
        />


    </RelativeLayout>
    <TextView
        android:layout_toRightOf="@+id/rl_pic"
        android:layout_width="2dp"
        android:layout_height="180dp"
        android:background="#fff"></TextView>
</RelativeLayout>